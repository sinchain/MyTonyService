<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--Title -->
    <android.support.v7.widget.AppCompatAutoCompleteTextView
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textSize="@dimen/h2"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/title_thai"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--Content-->
    <LinearLayout
        android:padding="16dp"
        android:layout_marginRight="@dimen/mymargin"
        android:layout_marginLeft="@dimen/mymargin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Date-->
       <TextView
           android:id="@+id/txtShowDate"
           android:textColor="@color/colorPrimaryDark"
           android:textStyle="bold"
           android:textSize="@dimen/h3"
           android:text="@string/date"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

        <!--Exchange Rate-->
        <TextView
            android:id="@+id/txtShowRate"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="@dimen/h3"
            android:text="@string/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--Text Field USD-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Edit test-->
            <EditText
                android:inputType="number"
                android:id="@+id/editUSD"
                android:hint="USD"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <!--Button-->
            <Button
                android:id="@+id/btnExchange"
                android:layout_gravity="center_vertical"
                android:textSize="10sp"
                android:text="Exchange"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <!--Show Answer-->
        <TextView
            android:layout_marginTop="@dimen/mymargin"
            android:id="@+id/txtAnswer"
            android:textColor="#1042e7"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="@dimen/h2"
            android:text="@string/answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>